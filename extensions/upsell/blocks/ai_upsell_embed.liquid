{% comment %}AI Upsell Embed (toggle in Theme > App embeds){% endcomment %}
{% if request.page_type == 'product' or request.page_type == 'cart' %}
  {% render 'ai_upsell_widget', source: 'embed', settings: settings %}
{% endif %}

{% schema %}
{
  "name": "AI Upsell Embed",
  "target": "body",
  "settings": [
    {
      "type": "header",
      "content": "Display"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Upsell Products"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size",
      "min": 18,
      "max": 36,
      "step": 2,
      "default": 28,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "max_products",
      "label": "Max Products",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_reason",
      "label": "Show Reason",
      "default": true
    },
    {
      "type": "text",
      "id": "loading_text",
      "label": "Loading Text",
      "default": "Finding perfect products for you..."
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary/AI Badge",
      "default": "#667eea"
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Price",
      "default": "#2c6ecb"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Card Background",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Button Colors"
    },
    {
      "type": "color",
      "id": "add_to_cart_bg",
      "label": "Button Background",
      "default": "#008060"
    },
    {
      "type": "color",
      "id": "add_to_cart_text",
      "label": "Button Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "add_to_cart_hover_bg",
      "label": "Button Hover BG",
      "default": "#006e52"
    },
    {
      "type": "color",
      "id": "add_to_cart_hover_text",
      "label": "Button Hover Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "add_to_cart_disabled_bg",
      "label": "Disabled BG",
      "default": "#e0e0e0"
    },
    {
      "type": "color",
      "id": "add_to_cart_disabled_text",
      "label": "Disabled Text",
      "default": "#999999"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Container Padding",
      "min": 0,
      "max": 60,
      "step": 5,
      "default": 30,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "card_padding",
      "label": "Card Padding",
      "min": 8,
      "max": 32,
      "step": 2,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "Grid Gap",
      "min": 10,
      "max": 40,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Container Radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 8,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "product_title_size",
      "label": "Title Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "price_size",
      "label": "Price Size",
      "min": 14,
      "max": 28,
      "step": 1,
      "default": 18,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "reason_size",
      "label": "Reason Size",
      "min": 11,
      "max": 16,
      "step": 1,
      "default": 13,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "hover_shadow",
      "label": "Hover Shadow",
      "default": "0 8px 20px rgba(0,0,0,0.1)"
    },
    {
      "type": "range",
      "id": "hover_lift",
      "label": "Hover Lift",
      "min": 0,
      "max": 12,
      "step": 2,
      "default": 4,
      "unit": "px"
    }
  ]
}
{% endschema %}
